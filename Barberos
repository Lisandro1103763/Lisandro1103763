 cita privada nula  ()
        {
            var  aleatorio  =  nuevo  Aleatorio ();
            var  cita  =  nueva  cita
            {
                Id  =  CédulaTexto . Texto ,
                Numero  =  aleatorio . Siguiente ( 1000000 , 9999999 ). a la cadena (),
                NombreCliente  =  ClienteTexto . Texto ,
                celularCliente  =  CelularTexto . Texto ,
                MailCliente  =  MailTexto . Texto ,
                Barberos  =  listabarberos . ValorSeleccionado . a la cadena (),
                Hora  =  ListaHora . ValorSeleccionado . a la cadena (),
                DiaCreacion  =  DateTime . Ahora ,
            };

            var  enableAppoinments  =  Citas . Count ( x  =>  x . Dia . ToString ( " dd/mm/yyyy " ) ==  dateTimePicker1 . Value . ToString ( " dd/mm/yyyy " )
            &&  x . Hora  ==  ListaHora . ValorSeleccionado . a la cadena ());

            if ( citas habilitadas  >  0 )
            {
                Cuadro de mensaje . Mostrar ( " El horario esta lleno " );
                volver ;
            }

            citas _ Añadir ( cita );
            var  valorhora  =  Hora . FirstOrDefault ( x  =>  x . ToString () ==  ListaHora . SelectedValue . ToString ());
            hora _ Quitar ( valorhora );
            ListaHora . Fuente de datos  =  nulo ;
            ListaHora . FuenteDatos  =  Hora ;
            GCita ();
            GrupoCaja . Habilitado  =  falso ;
            Vacío ();
        }
